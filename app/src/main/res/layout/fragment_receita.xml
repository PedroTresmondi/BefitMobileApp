<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceitaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_voltar_receita"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:focusable="true"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_receita_nome_titulo"
                android:layout_width="200dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                android:text="RECEITA EXAMPLE"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="18sp"
                android:gravity="center"/>


            <ImageView
                android:id="@+id/iv_informacao_receita"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/outline_info_24" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius"
                android:layout_margin="20dp"
                android:padding="15dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_dieta"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="perder peso rapido"
                        android:layout_marginStart="15dp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="16sp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="descricao dieta"
                        android:layout_marginStart="15dp"
                        android:textSize="12sp">

                    </TextView>
                </LinearLayout>


                <ImageButton
                    android:id="@+id/like_catalogo"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/ic_like"
                    android:contentDescription="@string/like_buttom">
                </ImageButton>

            </LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_item_receita"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>

</FrameLayout>