<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name=".MyApplication"
    tools:context=".HomeActivity"
    android:theme="@style/BefitApp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/bg_app"
        >

        <LinearLayout
            android:id="@+id/top_navigation_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="10dp"
            android:layout_weight="0"
            style="@style/top_navigation_bg"
            >

            <TextView
                android:id="@+id/top_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/nome_da_activity"
                android:textSize="18sp"
                style="@style/top_navigation_content"
                 />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView

                android:id="@+id/item_exit"
                android:layout_width="42dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_exit_to_app_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>


        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_navigation_menu"
            style="@style/bottom_navigation"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>